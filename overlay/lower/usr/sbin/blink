#!/bin/sh

PID_FILE="/run/blink.pid"
echo $$ > $PID

cleanup() {
	# FIXME: set pin to the predefined default status
	if [ -n "$pin" ]; then
		gpio set $pin 0
	fi

	if [ -f "$PID_FILE" ]; then
		rm "$PID_FILE"
	fi

	exit 0
}
trap cleanup 1 2 3 6 15

if [ "$#" -lt 1 ]; then
	echo "Usage: blink <pin> [interval in sec.]" >&2
	exit 1
fi

pin=$1
interval=${2:-1}

if [ "$interval" -eq 0 ]; then
	gpio set $pin 1
	sleep infinity
else
	while :; do
		gpio toggle $pin
		sleep $interval
	done
fi
