#!/bin/env sh
# Sends data to ntfy.sh
# https://docs.ntfy.sh/publish/

. /usr/share/common

show_help() {
	echo "Usage: $0 [options]
Where:
	-a URL       Attachment URL.
	-c URL       Click URL.
	-f file      Attach file.
	-h host      Server host.
	-i URL       Icon URL.
	-m message   Message body.
	-n title     Message title.
	-p N         Priority. 1-lowest, 5-highest.
	-s           Send a snapshot.
	-t topic     Topic.
	-u username  Username.
	-w password  Password.
	-v           Verbose output.
" >&2
	exit 0
}

while getopts a:c:f:h:i:l:m:n:p:st:u:w:vh flag; do
	case "$flag" in
		a) ntfy_attach=$OPTARG ;;
		c) ntfy_click=$OPTARG ;;
		f) ntfy_filename=$OPTARG ;;
		h) ntfy_host=$OPTARG ;;
		i) ntfy_icon=$OPTARG ;;
		m) ntfy_message=$OPTARG ;;
		n) ntfy_title=$OPTARG ;;
		p) ntfy_priority=$OPTARG ;;
		s) ntfy_send_snap="true" ;;
		t) ntfy_topic=$OPTARG ;;
		u) ntfy_username=$OPTARG ;;
		w) ntfy_password=$OPTARG ;;
		v) verbose="true" ;;
		*) show_help ;;
	esac
done

# validators
[ -z "$ntfy_topic" ] && die "NTFY topic is not set"

# defaults
[ -z "$ntfy_host" ] && ntfy_host="ntfy.sh"
[ -z "$ntfy_port" ] && ntfy_port=80

# attachments
remove_ntfy_file="false"

if [ "true" = "$ntfy_send_snap" ]; then
	ntfy_filename=$(mktemp -u).jpg
	cp -f "$SNAPSHOT_FILE" "$ntfy_filename"
	remove_ntfy_file="true"
fi

# command
if [ "true" = "$verbose" ]; then
	command="$CURL --verbose"
else
	command="$CURL --silent"
fi

command="$command -X POST -H p:${ntfy_priority:-3}"

[ -n "$ntfy_title" ] && command="$command -H 'Title: $ntfy_title'"
[ -n "$ntfy_tags" ] && command="$command -H 'Tags: $ntfy_tags'"
[ -n "$ntfy_delay" ] && command="$command -H 'Delay: $ntfy_delay'"
[ -n "$ntfy_username" ] && \
[ -n "$ntfy_password" ] && command="$command -u $ntfy_username:$ntfy_password"

if [ "true" = "$ntfy_send_snap" ]; then
	attachment=$(mktemp -u).jpg
	cp -f "$SNAPSHOT_FILE" "$attachment"
	command="$command -T $attachment -H 'Filename: $attachment'"
fi

[ -n "$ntfy_filename" ] && \
[ -f "$ntfy_filename" ] && command="$command -T $ntfy_filename -H 'Filename: $ntfy_filename'"
[ -n "$ntfy_attach"   ] && command="$command -H 'Attach: $ntfy_attach'"
[ -n "$ntfy_click"    ] && command="$command -H 'Click: $ntfy_click'"
[ -n "$ntfy_icon"     ] && command="$command -H 'Icon: $ntfy_icon'"
[ -n "$ntfy_email"    ] && command="$command -H 'Email: $ntfy_email'"
[ -n "$ntfy_actions"  ] && command="$command -H 'Actions: $ntfy_actions'"
[ -n "$ntfy_twilio_token" ] && \
[ -n "$ntfy_call"     ] && command="$command -H 'Call: $ntfy_call' -u :$ntfy_twilio_token"

if [ -n "$ntfy_message" ]; then
	ntfy_message="$(date +"$ntfy_message")"
	command="$command -H 'Message: $ntfy_message'"
fi

command="$command ${ntfy_host:-ntfy.sh}/$ntfy_topic"

[ "true" = "$verbose" ] && echo_command "$command"

sh -c "$command" || die "Failed to send NTFY message"

[ "true" = "$remove_ntfy_file" ] && [ -f "$ntfy_filename" ] && rm "$ntfy_filename"

exit 0
