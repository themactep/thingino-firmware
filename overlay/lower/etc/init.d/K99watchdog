#!/bin/sh

DAEMON_ARGS="-T 60 /dev/watchdog"

. /etc/init.d/rc.common

start() {
	starting
	[ "true" = "$(fw_printenv -n disable_watchdog)" ] && quit "Disabled"
	start_daemon
}

stop() {
	stopping
	stop_daemon
}

kill() {
	stopping
	kill_daemon
}

case "$1" in
	start | stop)
		$1
		;;

	reload | restart)
		stop
		sleep 1
		start
		;;

	kill)
		kill
		;;

	*)
		echo "Usage: $0 {start|stop|restart}"
		exit 1
		;;
esac

exit 0
