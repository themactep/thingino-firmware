#!/bin/sh

DAEMON_ARGS="-n -C64 -t -D"

. /etc/init.d/rc.common

start() {
	starting
	start_daemon_with_pid
}

stop() {
	stopping
	stop_daemon_with_pid
}

case "$1" in
	start | stop)
		$1
		;;
	reload | restart)
		stop
		sleep 1
		start
		;;
	*)
		die "Usage: $0 {start|stop|restart}"
		;;
esac

exit 0
