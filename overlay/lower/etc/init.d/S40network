#!/bin/sh

. /etc/init.d/rc.common

filter_net_output() {
	awk '/ip: SIOCGIFINDEX: No such device|route: SIOCDELRT: No such process|ip: SIOCGIFFLAGS: No such device/ {print " " $0 | "logger -p daemon.info -t '$(readlink -f $0)' >&2"; next} {print " " $0}'
}

case "$1" in
	start)
		starting
		ifup -a 2>&1 | filter_net_output
		;;

	stop)
		stopping
		ifdown -a 2>&1 | indent_output
		;;

	restart | reload)
		stop
		sleep 1
		start
		;;

	*)
		echo "Usage: $0 {start|stop|restart}"
		exit 1
		;;
esac

exit 0
