#!/bin/sh

. /usr/share/common

COMMAND="/bin/env -- LD_PRELOAD=/lib/libimp_control.so $DAEMON_FULL"

start() {
	echo_title "Starting Prudynt"
	start_daemon
}

stop() {
	echo_title "Stopping Prudynt"
	stop_daemon
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	restart)
		stop || true
		sleep 1
		start
		;;
	*)
		echo "Usage: $0 {start|stop|restart}"
		exit 1
		;;
esac

exit 0
