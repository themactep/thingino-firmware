 /*
+ * Check if a path requires NO authentication (open access).
+ * Returns 1 if path has explicit open access rule, 0 otherwise.
+ */
+static int is_open_access(const char *path)
+{
+	Htaccess *cur;
+	Htaccess *best_match = NULL;
+	size_t best_match_len = 0;
+
+	/* Find the most specific (longest) matching path */
+	for (cur = g_auth; cur; cur = cur->next) {
+		const char *dir_prefix;
+		size_t len;
+
+		dir_prefix = cur->before_colon;
+		len = strlen(dir_prefix);
+
+		/* Check if this is a prefix match */
+		if (len == 1 /* dir_prefix "/" matches all */
+		 || (strncmp(dir_prefix, path, len) == 0
+		    && (path[len] == '/' || path[len] == '\0'))
+		) {
+			/* This path matches - check if it's more specific than current best */
+			if (len > best_match_len) {
+				best_match = cur;
+				best_match_len = len;
+			}
+		}
+	}
+
+	if (!best_match)
+		return 0; /* No auth rules for this path */
+
+	/* Check if this is an "open access" entry (empty password or just "*:") */
+	if (best_match->after_colon[0] == '\0' || strcmp(best_match->after_colon, "*:") == 0)
+		return 1; /* Open access - no authentication required */
+
+	return 0;
+}
